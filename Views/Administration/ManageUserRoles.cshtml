@model List<UserRolesViewModel>

    @{
        var userId = ViewBag.userId;
    }
<form method="post">
    <div class="card">
      <div class="card-header">
        <h2>Manage users in this role</h2>
      </div>
      <div class="card-body">
        @{ if(Model != null)
            {
                for(int i = 0; i < Model.Count; i++)
                {
                    <div class ="form-check m-2">
                        <input hidden class="form-control" asp-for="@Model[i].RoleId"/>
                        <input hidden class="form-control" asp-for="@Model[i].RoleName"/>
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label"> 
                        @Model[i].RoleName</label>
                    </div>
                }
            }
            else
            {
                <h5 class="card-title"> Non At the moment</h5>
            }

        }
      </div>
          <div class="card-footer">
          <input type="submit" class="btn btn-primary" value="Update" 
            style="width:auto"/>
            <a asp-action="EditUser" asp-route-userId="@userId" class="btn btn-primary" 
            style="width:auto">Cancel</a>
          </div>
    </div>
</form>
