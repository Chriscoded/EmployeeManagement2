@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}
<form method="post" class="mt-3">
     <div class="card">
      <div class="card-header">
        <h3>Add or remove Users from this role</h3>
      </div>
      <div class="card-body">
        @for(int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m-1"> 
                <input hidden asp-for="@Model[i].UserId"/>
                <input hidden asp-for="@Model[i].UserName"/>
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label"> @Model[i].UserName</label>
            </div>
        }
      </div>
      <div class="card-footer">
        <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
        <a asp-action="EditRole" asp-route-roleId="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
      </div>
    </div>
</form>